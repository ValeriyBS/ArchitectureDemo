@model Application.Orders.Commands.CreateOrdersListViewModel.Factory.OrdersListViewModel

<h4>List of previous orders</h4>
<div class="container m-md-5">
    @foreach (var order in Model.Orders)
    {
        <h6>Order Details</h6>
        <partial name="_Order" model="order"/>
    }
</div>


<ul class="pagination justify-content-center">
    <li class="@(Model.HasPrevPage ? "page-item" : "page-item disabled")">
        <a class="page-link" asp-controller="Orders" asp-action="List" asp-route-pageSize="@Model.PageSize" asp-route-pageIndex="@(Model.PageIndex-1)" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (var i = 1; i < Model.NumberOfPages+1; i++)
    {
        <li class="@(Model.PageIndex == i ? "page-item active" : "page-item") )">
            <a class="page-link" asp-controller="Orders" asp-action="List" asp-route-pageSize="@Model.PageSize" asp-route-pageIndex="@(i)">@i</a>
        </li>
    }

    <li class="@(Model.HasNextPage ? "page-item":"page-item disabled")">
        <a class="page-link" asp-controller="Orders" asp-action="List" asp-route-pageSize="@Model.PageSize" asp-route-pageIndex="@(Model.PageIndex+1)" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>
<div class="text-center text-primary">Orders per page</div>
<div class="row justify-content-center">
    <div>
        <a class="btn btn-primary" type="button" asp-controller="Orders" asp-action="List" asp-route-pageSize="@(Model.TotalNumberOfOrders/3)" asp-route-pageIndex="@Model.PageIndex">@(Model.TotalNumberOfOrders/3)</a>
        <a class="btn btn-primary" type="button" asp-controller="Orders" asp-action="List" asp-route-pageSize="@(Model.TotalNumberOfOrders/2)" asp-route-pageIndex="@Model.PageIndex">@(Model.TotalNumberOfOrders/2)</a>
        <a class="btn btn-primary" type="button" asp-controller="Orders" asp-action="List" asp-route-pageSize="@(Model.TotalNumberOfOrders/1)" asp-route-pageIndex="@Model.PageIndex">@(Model.TotalNumberOfOrders/1)</a>
    </div>
    

</div>
