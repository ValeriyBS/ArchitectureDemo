@model ShoppingCartModel
<h4>@Model.CartId</h4>

<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var cartItem in Model.ShoppingCartItems)
    {
        <tr>
            <td>@cartItem.Id</td>
            <td>@cartItem.ShopItem.Name</td>
            <td>@cartItem.Amount</td>
            <td>@cartItem.ShopItem.Price</td>
        </tr>
    }
    </tbody>

</table>
